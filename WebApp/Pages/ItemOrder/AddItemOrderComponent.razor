@page "/additemOrder"
@using UseCases

@inject NavigationManager NavigationManager
@inject IAddItemOrderUseCase AddItemOrderUseCase 
@inject IGetProductByIdUseCase GetProductByIdUseCase 
@inject IGetCustomerByIdUseCase GetCustomerByIdUseCase 
@inject IGetVendorByIdUseCase GetVendorByIdUseCase 

<h3>Add ItemOrder</h3>

@if (itemOrder != null)
{
    <EditForm Model="itemOrder"  OnValidSubmit="OnValidSubmit">
        <DataAnnotationsValidator></DataAnnotationsValidator>
        <ValidationSummary></ValidationSummary>

        <div class="form-group">
            <label for="name">Name</label>
            <InputText id="name" @bind-Value="GetProductByIdUseCase.Execute(itemOrder.ProductId).Name" class="form-control"></InputText>
        </div>

        <div class="form-group">
            <label for="name">Name</label>
            <InputText id="name" @bind-Value="GetCustomerByIdUseCase.Execute(itemOrder.ProductId).Name" class="form-control"></InputText>
        </div>

        <div class="form-group">
            <label for="name">Name</label>
            <InputText id="name" @bind-Value="GetVendorByIdUseCase.Execute(itemOrder.ProductId).Name" class="form-control"></InputText>
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <InputText id="description" @bind-Value="itemOrder.Description" class="form-control"></InputText>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-primary" @onclick="OnCansel">Cansel</button>
    </EditForm>
}

@code {
    private ItemOrder itemOrder;

    protected override void OnInitialized()
    {
        base.OnInitialized();

        itemOrder = new ItemOrder();
    }
    private void OnValidSubmit()
    {
        AddItemOrderUseCase.Execute(itemOrder);
        NavigationManager.NavigateTo("/categories");
    }

    private void OnCansel()
    {
        NavigationManager.NavigateTo("/categories");
    }
}
